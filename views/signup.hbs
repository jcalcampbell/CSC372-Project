<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <h1><span class="fa fa-sign-in"></span> Signup</h1>

            {{# if message.length}}
                <div class="alert alert-danger">{{message}}</div>
            {{/if}}

            <form action="/signup" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" placeholder="example@example.com">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="**********">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" name="passwordConfirm" placeholder="**********">
                </div>
                <button type="submit" class="btn btn-warning">Signup</button>
            </form>

            <p style="padding-top: 10px">Already have an account? <a href="/login">Login</a></p>
        </div>
    </div>
</div>